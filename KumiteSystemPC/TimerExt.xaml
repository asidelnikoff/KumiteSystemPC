        xmlns:local="clr-namespace:KumiteSystemPC"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019" 
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="" Height="300" Width="500" ResizeMode="NoResize" ShowInTaskbar="False" >
